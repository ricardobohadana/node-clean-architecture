{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-useless-constructor": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 100,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": false,
        "singleQuote": true
      }
    ]
  }
}